  <style>


    body {
      background: #f8f8f8;
      text-align: center;
      color: #fff;
      font-family: Microsoft YaHei, Segoe UI, Tahoma, Arial, Verdana, sans-serif;
    }

    .page-container {
      width: 350px;
      height: auto;
      margin: 0px auto 0 auto;
    }

    h1 {
      font-size: 30px;
      font-weight: 700;
      color: #f13f4b;
    }

    form {
      position: relative;
      width: 350px;
      margin: 15px auto 0 auto;
      text-align: center;
    }

    input {
      width: 270px;
      height: 42px;
      margin-top: 25px;
      padding: 0 15px;
      background: #ff5c5c;
      -moz-border-radius: 6px;
      -webkit-border-radius: 6px;
      border-radius: 6px;

      border: 1px solid rgba(255, 255, 255, .15);
      -moz-box-shadow: 0 2px 3px 0 rgba(0, 0, 0, .1) inset;
      -webkit-box-shadow: 0 2px 3px 0 rgba(0, 0, 0, .1) inset;
      box-shadow: 0 2px 3px 0 rgba(0, 0, 0, .1) inset;
      font-family: 'PT Sans', Helvetica, Arial, sans-serif;
      font-size: 14px;
      color: #fff;
      text-shadow: 0 1px 2px rgba(0, 0, 0, .1);
      -o-transition: all .2s;
      -moz-transition: all .2s;
      -webkit-transition: all .2s;
      -ms-transition: all .2s;
    }

    button {
      cursor: pointer;
      width: 300px;
      height: 44px;
      margin-top: 25px;
      padding: 0;
      background: #ef4300;
      -moz-border-radius: 6px;
      -webkit-border-radius: 6px;
      border-radius: 6px;
      border: 1px solid #ff730e;
      font-family: 'PT Sans', Helvetica, Arial, sans-serif;
      font-size: 14px;
      font-weight: 700;
      color: #fff;
      text-shadow: 0 1px 2px rgba(0, 0, 0, .1);
    }

    .breadcrumb{
      color:black;
      size:18px;
    }

    select {
      /*Chrome和Firefox里面的边框是不一样的，所以复写了一下*/
      border: solid 1px #333333;

      /*很关键：将默认的select选择框样式清除*/
      appearance: none;
      -moz-appearance: none;
      -webkit-appearance: none;

      /*为下拉小箭头留出一点位置，避免被文字覆盖*/
      margin-right: 15px;

      width: 380px;
      height: 42px;
      margin-top: 25px;
      padding: 0 15px;
      background: #ff5c5c;
      -moz-border-radius: 6px;
      -webkit-border-radius: 6px;
      border-radius: 6px;

      border: 1px solid rgba(255, 255, 255, .15);
      -moz-box-shadow: 0 2px 3px 0 rgba(0, 0, 0, .1) inset;
      -webkit-box-shadow: 0 2px 3px 0 rgba(0, 0, 0, .1) inset;
      box-shadow: 0 2px 3px 0 rgba(0, 0, 0, .1) inset;
      font-family: 'PT Sans', Helvetica, Arial, sans-serif;
      font-size: 14px;
      color: #fff;

    }

    /*－－－增加部份的CSS－－－*/
    form, input, button {
      font-family: Microsoft YaHei, Segoe UI, Tahoma, Arial, Verdana, sans-serif;
      text-decoration: none;
      width: 100%;
    }

    button.submit_button {
      font-size: 24px;
      width: 130px;
      background: #ff5c5c
    }

    input.Captcha {
      width: 130px;
      float: left;
    }


  </style>

  <title>添加渠道商</title>

</head>

<body style='border-top:2px solid red;'>
<p class='top'>
  <span class='p1'>添加渠道商</span>
  <span class='s2'><%= current_user.name+", 您好" %></span>

  <% if current_user.admin %>

  <% else %>
      <!--<span class='s1'>消息提醒&nbsp;&nbsp;&nbsp;|</span>-->
      <span class='s1' id="tx">申请提现&nbsp;&nbsp;&nbsp;|</span>
  <% end %>

  <%= link_to "转账记录 ", channel_channel_user_transfers_path(current_user), class: 's1' %>
  <div class='clear'></div>
  </p>

  <hr style='background:#f7f7f7;height:5px;opacity:0.8;border-top:none;margin:20px 0px'/>

  <div class="page-container">
    <h1>添加渠道商</h1>
    <% if :nocice %>
        <p class="breadcrumb"><%= notice %></p>
    <% end %>
      <form action="/channel/channel_users/create" method="post">
        <input type="text" name="name" id='name' class="username" placeholder="姓名">
        <input type="text" name="email" id='email' class="password" placeholder="邮箱">
        <input type="text" name="phone" id='phone' class="password" placeholder="手机号">
        <input type="text" name="password" id='password' class="password" placeholder="密码">
        <%= select_tag "district", options_from_collection_for_select(District.all, "id", "name"), prompt: "选择区域" %>
        <select name="type" id="type">
          <option value="" >选择类型</option>
          <option value=0>个人</option>
          <option value=1>公司</option>
        </select>
        <button type="submit" id="sub" class="submit_button">添加</button>
        <div class="error"><span>+</span></div>
      </form>
  </div>

  <script>

    $('#sub').click(function(){
        if($.trim($("#name").val())==''){
          alert('请填写密码!')
          return false;
        }

      if($.trim($("#email").val())==''){
        alert('请填写邮箱!')
        return false;
      }

      if($.trim($("#phone").val())==''){
        alert('请填写手机号!')
        return false;
      }

      if($.trim($("#password").val())==''){
        alert('请填写密码!')
        return false;
      }

      if($.trim($("#district").val())==''){
        alert('请选择区域!')
        return false;
      }

      if($.trim($("#type").val())==''){
        alert('请选择类型')
        return false;
      }
    })

  </script>

  </body>
</html>
